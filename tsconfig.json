{
  "compilerOptions": {
    "target": "es5",                        
    "module": "commonjs",                   
    "strict": true,                         
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true, 
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "lib": ["es2019", "es2020"]
  },
  "include": ["src/"],
  "exclude": ["src/tests/**"]
}
